<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/question1" />

        <RadioGroup
            style="@style/TextViewStyle">

            <RadioButton
                android:id="@+id/answer_1"
                style="@style/TextViewStyle"
                android:text="@string/q1_1" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q1_2" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q1_3" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q1_4" />
        </RadioGroup>

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/question2" />

        <EditText
            android:id="@+id/answer_2"
            style="@style/EditTextStyle" />

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/question3" />

        <RadioGroup
            style="@style/TextViewStyle">

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q3_1" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q3_2" />

            <RadioButton
                android:id="@+id/answer_3"
                style="@style/TextViewStyle"
                android:text="@string/q3_3" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q3_4" />
        </RadioGroup>

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/question4" />

        <EditText
            android:id="@+id/answer_4"
            style="@style/EditTextStyle" />

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/question5" />

        <RadioGroup
            style="@style/TextViewStyle">

            <RadioButton
                android:id="@+id/answer_5"
                style="@style/TextViewStyle"
                android:text="@string/q5_1" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q5_2" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q5_3" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q5_4" />
        </RadioGroup>

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/question6" />

        <CheckBox
            android:id="@+id/a6_rorschach"
            style="@style/TextViewStyle"
            android:text="@string/q6_1" />

        <CheckBox
            android:id="@+id/a6_havok"
            style="@style/TextViewStyle"
            android:text="@string/q6_2" />

        <CheckBox
            android:id="@+id/a6_manhattan"
            style="@style/TextViewStyle"
            android:text="@string/q6_3" />

        <CheckBox
            android:id="@+id/a6_nite_owl"
            style="@style/TextViewStyle"
            android:text="@string/q6_4" />

        <CheckBox
            android:id="@+id/a6_hawkeye"
            style="@style/TextViewStyle"
            android:text="@string/q6_5" />

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/question7" />

        <RadioGroup
            style="@style/TextViewStyle">

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q7_1" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q7_2" />

            <RadioButton
                style="@style/TextViewStyle"
                android:text="@string/q7_3" />

            <RadioButton
                android:id="@+id/answer_7"
                style="@style/TextViewStyle"
                android:text="@string/q7_4" />
        </RadioGroup>

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/question8" />

        <EditText
            android:id="@+id/answer_8"
            style="@style/EditTextStyle" />

        <Button
            android:onClick="checkAnswers"
            android:id="@+id/get_score"
            style="@style/TextViewStyle"
            android:layout_gravity="center"
            android:text="@string/get_score" />

    </LinearLayout>
</ScrollView>